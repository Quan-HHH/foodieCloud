.comment-item-container {
  padding: 5px 10px;
}
.comment-item-container .userinfo-wrapper {
  display: flex;
  align-items: center;
}
.comment-item-container .userinfo-wrapper .avatar {
  width: 50px;
  height: 50px;
  border-radius: 100%;
  overflow: hidden;
}
.comment-item-container .userinfo-wrapper .avatar image {
  width: 100%;
  height: 100%;
}
.comment-item-container .userinfo-wrapper .username-and-rate {
  padding-left: 15px;
}
